@model EmerceWebsite_Shop_master.Models.Shop
@{
    ViewBag.Title = "Quản lý Thông tin Cửa hàng";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="app-content-header">
    <div class="container-fluid">
        <h3 class="mb-0">@ViewBag.Title</h3>
    </div>
</div>

<div class="app-content">
    <div class="container-fluid">
        <div class="card card-primary card-outline mb-4">
            <div class="card-header"><div class="card-title">Cấu hình Cửa hàng</div></div>

            @using (Html.BeginForm("UpdateThongTin", "QLCH", FormMethod.Post, new { id = "form-shop-info", enctype = "multipart/form-data" }))
            {
                @Html.AntiForgeryToken()
                <div class="card-body">

                    @Html.HiddenFor(model => model.LogoUrl)
                    @Html.HiddenFor(model => model.ShopPolicy) @* Giữ lại HiddenFor để tránh lỗi binding nếu Model vẫn chứa trường này *@

                    <div class="row mb-3">
                        <div class="col-lg-6">
                            <label for="ShopName" class="form-label">Tên Cửa hàng</label>
                            @Html.TextBoxFor(model => model.ShopName, new { @class = "form-control", required = "required" })
                        </div>
                        <div class="col-lg-6">
                            <label for="ShopLocation" class="form-label">Địa chỉ</label>
                            @Html.TextBoxFor(model => model.ShopLocation, new { @class = "form-control", required = "required" })
                        </div>
                    </div>

                    <div class="row mb-3">
                        <div class="col-lg-6">
                            <label for="IsActive" class="form-label">Trạng thái hoạt động</label>
                            @Html.DropDownListFor(model => model.IsActive, new SelectList(
                                new[]
                                {
                                    new { Value = true, Text = "Đang hoạt động" },
                                    new { Value = false, Text = "Tạm ngừng hoạt động" }
                                },
                                "Value",
                                "Text",
                                Model.IsActive
                            ), new { @class = "form-control" })
                        </div>
                        <div class="col-lg-6">
                            <label class="form-label text-white">Placeholder</label>
                            <div class="form-control" style="opacity: 0;"></div>
                        </div>
                    </div>

                    <div class="row mb-3">
                        <div class="col-lg-6">
                            <label for="ShopLogoFile" class="form-label">Tải lên Logo Cửa hàng</label>
                            <input type="file" id="ShopLogoFile" name="ShopLogoFile" class="form-control" accept="image/*" />
                            <small class="form-text text-muted">Tải lên logo cửa hàng (Chỉ chấp nhận file ảnh).</small>
                        </div>
                        <div class="col-lg-6">
                            <label class="form-label">Ảnh hiện tại</label>
                            @if (!string.IsNullOrEmpty(Model.LogoUrl))
                            {
                                <img src="@Url.Content(Model.LogoUrl)" alt="Logo Cửa hàng hiện tại" style="max-width: 150px; height: auto; border: 1px solid #ccc; padding: 5px;" />
                            }
                            else
                            {
                                <p class="text-secondary">Chưa có logo được tải lên.</p>
                            }
                        </div>
                    </div>

                </div>
                <div class="card-footer">
                    <button type="submit" class="btn btn-primary"><i class="bi bi-save"></i> Lưu Thay Đổi</button>
                </div>
            }
        </div>
    </div>
</div>

@section scripts {
    <script>

        $("#form-shop-info").submit(function (e) {
            e.preventDefault();

            var formData = new FormData(this);

            $.ajax({
                type: "POST",
                url: '@Url.Action("UpdateThongTin", "QLCH")',
                data: formData,
                processData: false,
                contentType: false,
                success: function (response) {
                    alert(response.message);
                    if (response.success) {
                        window.location.reload();
                    }
                },
                error: function (xhr, status, error) {
                    alert("Đã xảy ra lỗi khi gửi yêu cầu. Chi tiết: " + error);
                }
            });
        });
    </script>
}