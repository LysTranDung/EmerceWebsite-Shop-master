                        <!-- 8. THÔNG BÁO (MỤC MỚI) -->
                        <li class="nav-item">
                            <!-- Link đến Action ThongbaoIndex như yêu cầu -->
                            <a href="@Url.Action("ThongbaoIndex", "ThongBao")" class="nav-link">
                                <i class="nav-icon bi bi-bell-fill"></i>
                                <p>
                                    Thông báo
                                    <!-- Badge hiện số tin chưa đọc -->
                                    <span class="badge text-bg-danger float-end" id="sidebar-noti-badge" style="display:none">0</span>
                                </p>
