            <div class="sidebar-brand">
                <a href="@Url.Action("Index", "Home")" class="brand-link">
                    <img src="~/img/AdminLTELogo.png" alt="Project Logo" class="brand-image opacity-75 shadow" />
                    <span class="brand-text fw-light">QLSP</span>
                </a>
            </div>
            <div class="sidebar-wrapper">
                <nav class="mt-2">
                    <ul class="nav sidebar-menu flex-column" data-lte-toggle="treeview" role="navigation" data-accordion="false">

                        <!-- 1. BÁO CÁO & THỐNG KÊ -->
                        <li class="nav-item">
                            <a href="#" class="nav-link">
                                <i class="nav-icon bi bi-bar-chart-line-fill"></i>
                                <p>
                                    Báo cáo & Thống kê
                                    <i class="nav-arrow bi bi-chevron-right"></i>
                                </p>
                            </a>
                            <ul class="nav nav-treeview">
                                <li class="nav-item">
                                    <a href="@Url.Action("BaoCao", "ThongKe")" class="nav-link">
                                        <i class="nav-icon bi bi-circle"></i>
                                        <p>Báo cáo Tổng quan</p>
                                    </a>
                                </li>
                                <li class="nav-item">
                                    <a href="@Url.Action("ThongKe", "ThongKe")" class="nav-link">
                                        <i class="nav-icon bi bi-circle"></i>
                                        <p>Thống kê Doanh thu</p>
                                    </a>
                                </li>
                            </ul>
                        </li>

                        <!-- 2. QUẢN LÝ SẢN PHẨM -->
                        <li class="nav-item">
                            <a href="#" class="nav-link">
                                <i class="nav-icon bi bi-box-seam-fill"></i>
                                <p>
                                    Quản lý Sản phẩm
                                    <i class="nav-arrow bi bi-chevron-right"></i>
                                </p>
                            </a>
                            <ul class="nav nav-treeview">
                                <li class="nav-item">
                                    <a href="@Url.Action("DSSP", "QLSP")" class="nav-link">
                                        <i class="nav-icon bi bi-circle"></i>
                                        <p>Danh sách Sản phẩm</p>
                                    </a>
                                </li>
                                <li class="nav-item">
                                    <a href="@Url.Action("ThemSP", "QLSP")" class="nav-link">
                                        <i class="nav-icon bi bi-circle"></i>
                                        <p>Thêm mới</p>
                                    </a>
                                </li>
                                <li class="nav-item">
                                    <a href="@Url.Action("ChinhSua", "QLSP")" class="nav-link">
                                        <i class="nav-icon bi bi-circle"></i>
                                        <p>Chỉnh sửa</p>
                                    </a>
                                </li>
                            </ul>
                        </li>

                        <!-- 3. QUẢN LÝ ĐƠN HÀNG -->
                        <li class="nav-item">
                            <a href="#" class="nav-link">
                                <i class="nav-icon bi bi-receipt-cutoff"></i>
                                <p>
