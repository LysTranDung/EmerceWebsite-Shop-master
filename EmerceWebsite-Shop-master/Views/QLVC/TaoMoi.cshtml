@model EmerceWebsite_Shop_master.Models.Discount
@{
    ViewBag.Title = "Tạo Voucher mới";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="app-content-header">
    <div class="container-fluid">
        <h3 class="mb-0">@ViewBag.Title</h3>
    </div>
</div>

<div class="app-content">
    <div class="container-fluid">
        <div class="card card-primary card-outline mb-4">
            <div class="card-header">
                <div class="card-title">Thông tin Voucher</div>
            </div>
            <form id="form-discount">
                <div class="card-body">

                    <div class="row">
                        <div class="col-lg-6 mb-3">
                            <label for="DiscountCode" class="form-label">Mã Voucher</label>
                            <input type="text" class="form-control" name="DiscountCode" id="DiscountCode" required />
                        </div>
                        <div class="col-lg-6 mb-3">
                            <label for="DiscountPercentage" class="form-label">Giá trị giảm (%)</label>
                            <input type="number" class="form-control" name="DiscountPercentage" id="DiscountPercentage" min="10" max="100" required />
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-lg-12 mb-3">
                            <label for="DiscountDescription" class="form-label">Mô tả</label>
                            <textarea class="form-control" name="DiscountDescription" id="DiscountDescription" rows="2"></textarea>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-lg-4 mb-3">
                            <label for="Quantity" class="form-label">Số lượng phát hành</label>
                            <input type="number" class="form-control" name="Quantity" id="Quantity" min="1" required />
                        </div>
                        <div class="col-lg-4 mb-3">
                            <label for="StartDate" class="form-label">Ngày bắt đầu</label>
                            <input type="date" class="form-control" name="StartDate" id="StartDate" required />
                        </div>
                        <div class="col-lg-4 mb-3">
                            <label for="EndDate" class="form-label">Ngày kết thúc</label>
                            <input type="date" class="form-control" name="EndDate" id="EndDate" required />
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-lg-6 mb-3">
                            <label for="DiscountStatus" class="form-label">Trạng thái</label>
                            <select class="form-control" name="DiscountStatus" id="DiscountStatus">
                                <option value="Khả dụng">Khả dụng</option>
                                <option value="Không khả dụng">Không khả dụng</option>
                            </select>
                        </div>
                    </div>

                </div>
                <div class="card-footer">
                    <button type="button" id="btn_submit_create" class="btn btn-primary">Tạo Voucher</button>
                    <a href="@Url.Action("DanhSach", "QLVC")" class="btn btn-secondary">Quay lại danh sách</a>
                </div>
            </form>
        </div>
    </div>
</div>

@section scripts {
    <script>
    $("#btn_submit_create").click(function () {
        var form = $('#form-discount')[0];
        var formData = new FormData(form);

        $.ajax({
            type: "POST",
            data: formData,
            url: '@Url.Action("Insert", "QLVC")',
            processData: false,
            contentType: false,
            success: function (response) {
                alert(response);
                if (response.toLowerCase().includes("thành công")) {
                    window.location.href = '@Url.Action("DanhSach", "QLVC")';
                }
            },
            error: function (data) {
                alert("Đã xảy ra lỗi khi tạo Voucher.");
            }
        });
    });
    </script>
}